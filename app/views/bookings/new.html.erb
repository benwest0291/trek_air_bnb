
<div class="container">
  <div class="title">
    <h2>Select a date</h2>
 </div>
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for([@property, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <div class="button-wrap">
        <%= f.submit 'Book now', class: "btn btn-primary" %>
        <%= link_to 'Back', property_path(@property), class: "btn btn-primary" %>
      </div>
      <%# <%= f.submit 'Back', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
