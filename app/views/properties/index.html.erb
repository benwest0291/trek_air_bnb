<div class="banner">
   <h1>Properties 🏠</h1>
</div>


<div class = "container">

<div class="search-form-control form-group">
<%= form_tag properties_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a property"
  %>
  <%= submit_tag "Search", class: "btn btn-search" %>
<% end %>

