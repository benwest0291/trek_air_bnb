<div class="banner">
   <h1>Properties 🏠</h1>
</div>


<div class = "container">

<div class="search-form-control form-group">
<%= form_tag properties_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a property"
  %>
  <%= submit_tag "Search", class: "btn btn-search" %>
<% end %>

    </button>
  </div>


 <div class="card-container">
  <% @properties.each do |property|%>
  <%= link_to property_path(property) do %>
  <div class="card-trip">
    <% if property.image_url? %>
      <img src="<%= property.image_url%>">
    <% else %>
      <img src="https://images.unsplash.com/photo-1470217957101-da7150b9b681?ixlib=rb-1.2.1&ixid=MnwxM[…]90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1334&q=80">
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= property.name%></h2>
        <p><%= property.address %></p>
      </div>
      <h2 class="card-trip-pricing">Price £<%= property.price  %> </h2>
    </div>
  </div>
 <% end %>
<% end %>
</div>
</div>
<div class = "container">
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
</div>
