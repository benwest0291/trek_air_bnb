<div class="banner">
   <h1>Properties 🏠</h1>
</div>
<div class = "container">
<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-search">
      <i class="fas fa-search" ></i> Search
    </button>
  </div>
</form>

 <div class="card-container">
  <% @properties.each do |property|%>
  <%= link_to property_path(property) do %>
  <div class="card-trip">
    <img src=<%= property.image_url%>>
    <div class="card-trip-infos">
      <div>
        <h2><%= property.name%></h2>
        <p><%= property.address %></p>
      </div>
      <h2 class="card-trip-pricing">Price £<%= property.price  %> </h2>
    </div>
  </div>
 <% end %>
<% end %>
</div>
</div>
<div class = "container">
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
</div>
