<div class="banner">
   <h1>Properties 🏠</h1>
</div>
<div class = "container">
<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-search">
      <i class="fas fa-search" ></i> Search
    </button>
  </div>
</form>

 <div class="card-container">
  <% @properties.each do |property|%>
  <%= link_to property_path(property) do %>
  <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1577942948749-a3dbb5c6db0a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8d2hpdGUlMjBob3VzZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"/>
    <div class="card-trip-infos">
      <div>
        <h2><%= property.address%></h2>
        <p><%= property.description %></p>
      </div>
      <h2 class="card-trip-pricing">Price £<%= property.price  %> </h2>
    </div>
  </div>
 <% end %>
<% end %>
</div>
</div>
