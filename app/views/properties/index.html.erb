  </div>


 <div class="card-container">
  <% @properties.each do |property|%>
  <%= link_to property_path(property) do %>
  <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1577942948749-a3dbb5c6db0a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8d2hpdGUlMjBob3VzZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"/>
    <div class="card-trip-infos">
      <div>
        <h2><%= property.address%></h2>
        <p><%= property.description %></p>
      </div>
      <h2 class="card-trip-pricing">Price £<%= property.price  %> </h2>
    </div>
  </div>
 <% end %>
<% end %>
</div>
</div>
<div class = "container">
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
</div>
