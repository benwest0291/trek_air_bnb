<div class="container">
  <div class="form-inputs">
    <%= simple_form_for(@property) do |f| %>
      <%= f.input :address %>
      <%= f.input :postcode %>
      <%= f.input :price %>
      <%= f.input :description %>
    <div class="form-actions">
      <%= f.submit class: "btn btn-ghost" %>
    </div>
    <% end %>
  </div>
</div>
